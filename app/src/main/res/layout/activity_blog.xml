<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Views.ProfileActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/main_navigation_drawer" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0BABA"
        tools:context=".Views.ProfileActivity">

        <include layout="@layout/main_toolbar" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="676dp"
                android:layout_marginTop="450dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="@color/swapblue">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="135dp"
                        android:layout_height="127dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="-40dp"
                        android:layout_marginRight="250dp"
                        app:srcCompat="@drawable/istockphoto_1138642647_612x612" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="-55dp"
                        android:text="Meet you virtual classmates at Swap Langauge meetup!"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="Meetups will happen in Copenhagen, Aarhus and Aalborg... Read more here on how to sign up."
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="676dp"
                android:layout_marginTop="300dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="@color/swaporan">

                    <ImageView
                        android:id="@+id/gfd"
                        android:layout_width="wrap_content"
                        android:layout_height="112dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="300dp"
                        app:srcCompat="@drawable/people_2557396_1280" />

                    <TextView
                        android:id="@+id/fdsf"
                        android:layout_width="264dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:text="Why be in a class room when you can learn from your couch?"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/klæl"
                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="Meet our team of teachers, making your way to speaking languages easy..."
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="676dp"
                android:layout_marginTop="150dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="@color/swapblue">

                    <ImageView
                        android:id="@+id/dhsia"
                        android:layout_width="135dp"
                        android:layout_height="127dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="-40dp"
                        app:srcCompat="@drawable/mobile__8_" />

                    <TextView
                        android:id="@+id/jdsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:text="Explore Swap Language new App!"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/klj"
                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="15dp"
                        android:text="It´s finally here! Now you can see and add new classes via the all new app, optimized for the best experience of Swap Language..."
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="676dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="@color/swaporan">

                    <ImageView
                        android:id="@+id/hsu"
                        android:layout_width="135dp"
                        android:layout_height="127dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="-40dp"
                        app:srcCompat="@drawable/istockphoto_1138642647_612x612" />

                    <TextView
                        android:id="@+id/brds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:text="10 tips for a holiday in Denmark"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/brods"
                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="30dp"
                        android:text="Learn tips for how to speak with Danes when on holiday in Denmark..."
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/swapblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>